/* components/myFund/index.wxss */
.page {
  display: flex;
  padding: 16rpx;
  height: 100%;
}

.container {
  width: 100%;
}
.table {
  width: 100%;
  margin: 10rpx auto 30rpx;
}

.add-fund {
  border-style: solid;
  border-width: 0.5rpx;
  border-color: gray;
  border-radius: 40rpx;
  padding: 20rpx 20rpx;
  align-items: center;
  justify-content: center;
}

.footer-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
  background-color: #ebeef5;
  position: absolute;
  bottom: 0;
  margin-bottom: 20rpx;
  width: 100%;
  left: 0;
}

.footer-bar-txt {
  font-size: 30;
  font-weight: 600;
  color: red;
  margin-left: 10rpx;
}

.add-fund-footer {
  border-style: solid;
  border-width: 0.5rpx;
  border-color: gray;
  border-radius: 40rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
}

.add-fund-footer-hover {
  border-style: solid;
  border-width: 0.5rpx;
  border-color: red;
  border-radius: 40rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
  opacity: 0.9;
  color: red;
}