/* components/xmodal/index.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.modal-body {
  width: 60%;
  background-color: white;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}
.modal-title{
  display: flex;
  justify-content: center;
}

.modal-title-txt {
  font-weight: 500;
  font-size: 32rpx;
}

.modal-content {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
}

.modal-btn-ok {
  margin-right: 10rpx;
  height: 80rpx;
  flex: 1;
  background-color: #ff5050;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-btn-cancel {
  display: flex;
  height: 80rpx;
  flex: 1;
  background-color: #ededed;
  border-radius: 10rpx;
  justify-content: center;
  align-items: center;
}

.btn-txt {
  color: white;
  font-size: 32rpx;
}

.modal-input {
  border: 1px solid #ededed;
  width: 100%;
  height: 60rpx;
  border-radius: 10rpx;
  margin: 40rpx 0;
  padding: 0 10rpx;
}