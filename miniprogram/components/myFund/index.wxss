/* components/myFund/index.wxss */
.page {
  display: flex;
  padding: 16rpx;
  height: 100%;
  flex-direction: column;
}

.container {
  width: 100%;
}
.table {
  width: 100%;
  margin: 10rpx 0;
  flex: 1;
}

.add-fund {
  border-style: solid;
  border-width: 0.5rpx;
  border-color: gray;
  border-radius: 40rpx;
  padding: 20rpx 20rpx;
  align-items: center;
  justify-content: center;
}

.footer-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.footer-bar-txt-label {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.footer-bar-txt {
  font-size: 40rpx;
  font-weight: 600;
  margin-left: 10rpx;
}

.add-fund-footer {
  border-style: solid;
  border-width: 0.5rpx;
  border-color: gray;
  border-radius: 40rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
}

.add-fund-footer-hover {
  border-style: solid;
  border-width: 0.5rpx;
  border-color: red;
  border-radius: 40rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
  opacity: 0.9;
  color: red;
}

.footer-bar-label {
  display: flex;
  flex-direction: column;
}