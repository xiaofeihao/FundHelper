/* miniprogram/pages/add/add.wxss */
.add-container {
  display: flex;
  flex: 1;
  padding: 20rpx;
  background-color: white;
}

.add-base-info {
  display: flex;
  height: 270rpx;
  flex: 1;
  flex-direction: row;
}

.add-front-img {
  width: 180rpx;
  height: 270rpx;
  border-width: 1px;
  border-color: #ededed;
  border-style: solid;
}

.add-base-info-text-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-between;
}

.add-base-info-text {
  color: #232528;
  font-size: 20px;
  border-radius: 2px;
  border-bottom-width: 0.5px;
  border-top-width: 0;
  border-left-width: 0;
  border-right-width: 0;
  border-color: #ededed;
  border-style: solid;
  caret-color:#09BB07;
  padding: 10rpx;
}