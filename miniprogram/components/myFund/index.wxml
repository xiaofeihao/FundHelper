<!--components/myFund/index.wxml-->
<view class="page" style="justify-content:{{fundList.length<1 ? 'center' : 'flex-start'}};align-items:{{fundList.length<1 ? 'center' : 'flex-start'}}">
  <view class='add-fund' wx:if="{{fundList.length<1}}" bindtap="addFund">添加自选基金</view>
  <view wx:if="{{fundList.length>0}}" class="table">
    <table fundList="{{fundList}}" 
    columns="{{columns}}"
    setting="{{setting}}"
    contentHeight="{{contentHeight}}"
    bind:getCurrentValue="getCurrentValue"
    bind:clickFundItem="clickFundItem">
    </table>
  </view>
  <view wx:if="{{fundList.length>0}}" class="footer-bar" style="margin-bottom:{{needAdapt?80:60}}rpx;">
    <view class="footer-bar-label">
      <text class="footer-bar-txt-label">今日预估总收益：</text>
      <text class="footer-bar-txt" style="color:{{!totalIncome ? '#1b1f23' : (totalIncome > 0 ? 'red' : 'green')}}">￥{{totalIncome}}</text>
    </view>
    <view class="add-fund-footer" hover-class="add-fund-footer-hover" bindtap="addFund">加自选</view>
  </view>
</view>