/* components/quotation/index.wxss */
.container {
  display: flex;
  width: 100%;
  /* height: 100%; */
  flex-direction: column;
  padding: 0 20rpx;
}

.board-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.board-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 4px 4px;
  padding: 5rpx;
  background-color: #FFEFF2;
}

.board-num {
  font-size: 32rpx;
  font-weight: 600;
}

.board-label {
  color: black;
}

.board-percent {
  font-size: 26rpx;
}

.rank-label {
  margin-top: 20rpx;
  font-size: 36rpx;
}

.refresh-btn {
  display: flex;
  width: 100rpx;
  height: 60rpx;
  border-radius: 50rpx;
  border: 1px solid;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 24rpx;
  bottom: 30rpx;
}

.refresh-btn-hover {
  display: flex;
  width: 100rpx;
  height: 60rpx;
  border-radius: 50rpx;
  border: 1px solid;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 24rpx;
  bottom: 30rpx;
  opacity: 0.5;
}